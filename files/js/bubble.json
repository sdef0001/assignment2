{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Scatter plot with year selector showing Employment to Population Ratio vs. Unemployment Rate by state, with bubble size representing underemployment rate.",
  "data": {
    "url": "https://raw.githubusercontent.com/sdef0001/assignment1/refs/heads/main/bubble_data.csv",
    "format": {"type": "csv"}
  },
  "width": 600,
  "height": 400,
  "params": [
    {
      "name": "yearSelector",
      "value": 2020,
      "bind": {
        "input": "range",
        "min": 2020,
        "max": 2024,
        "step": 1,
        "name": "Select Year: "
      }
    }
  ],
  "transform": [
    {
      "filter": "datum.Year == yearSelector"
    }
  ],
  "mark": "circle",
  "encoding": {
    "x": {
      "field": "Employment to population ratio",
      "type": "quantitative",
      "title": "Employment to Population Ratio (%)",
      "scale": {
        "domain": [55, 75]
      }
    },
    "y": {
      "field": "Unemployment rate",
      "type": "quantitative",
      "title": "Unemployment Rate (%)",
      "scale": {
        "domain": [2, 10]
      }
    },
    "size": {
      "field": "Underemployment rate",
      "type": "quantitative",
      "title": "Underemployment Rate (%)",
      "scale": {
        "range": [100, 1000],
        "domain": [2.5, 5]
      }
    },
    "color": {
      "field": "State",
      "type": "nominal",
      "title": "State",
      "scale": {
        "scheme": "magma"
      },
      "legend": {
        "orient": "right"
      }
    },
    "tooltip": [
      {
        "field": "State",
        "type": "nominal",
        "title": "State"
      },
      {
        "field": "Employed people",
        "type": "quantitative",
        "title": "Employed People",
        "format": ",.0f"
      },
      {
        "field": "Employment to population ratio",
        "type": "quantitative",
        "title": "Employment to Population Ratio (%)"
      },
      {
        "field": "Unemployment rate",
        "type": "quantitative",
        "title": "Unemployment Rate (%)"
      },
      {
        "field": "Underemployment rate",
        "type": "quantitative",
        "title": "Underemployment Rate (%)"
      },
      {
        "field": "Participation rate",
        "type": "quantitative",
        "title": "Participation Rate (%)"
      },
      {
        "field": "Year",
        "type": "ordinal",
        "title": "Year"
      }
    ]
  },
  "config": {
    "view": {
      "stroke": null
    },
    "axis": {
      "grid": true,
      "labelFontSize": 12,
      "titleFontSize": 14
    },
    "legend": {
      "titleFontSize": 13
    }
  },
  "background": "#F5F5F5"
}