{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 700,
    "height": 400,
    "description": "A multiple line chart showing the employment data for Australian skill levels over time.",
    "params": [
      {
        "name": "highlight",
        "value": "Australia skill level 1",
        "bind": {
          "input": "select",
          "options": [
            "Australia skill level 1",
            "Australia skill level 2",
            "Australia skill level 3",
            "Australia skill level 4",
            "Australia skill level 5"
          ],
          "labels": [
            "Skill Level 1",
            "Skill Level 2",
            "Skill Level 3",
            "Skill Level 4",
            "Skill Level 5"
          ],
          "name": "Select Skill Level to Highlight: "
        }
      }
    ],
    "data": {
      "url": "https://raw.githubusercontent.com/sdef0001/assignment1/refs/heads/main/skill_level.csv",
      "format": {
        "type": "csv"
      }
    },
    "mark": {
      "type": "line",
      "strokeWidth": 3
    },
    "encoding": {
      "x": {
        "field": "month",
        "type": "temporal", 
        "axis": {
          "title": "Month",
          "format": "%b %Y" 
        }
      },
      "y": {
        "field": "value",
        "type": "quantitative",
        "axis": {
          "title": "Value"
        }
      },
      "color": {
        "field": "title",
        "type": "nominal",
        "title": "Skill Level",
        "scale": {
          "scheme": "magma"
        }
      },
      "tooltip": [
        {
          "field": "title",
          "type": "nominal",
          "title": "Skill Level"
        },
        {
          "field": "month",
          "type": "temporal",
          "title": "Month",
          "format": "%b %Y"
        },
        {
          "field": "value",
          "type": "quantitative",
          "title": "Employment Value",
          "format": ",.0f"
        }
      ],
      "opacity": {
        "condition": {
          "test": "datum.title == highlight",
          "value": 1
        },
        "value": 0.3
      },
      "size": {
        "condition": {
          "test": "datum.title == highlight",
          "value": 4
        },
        "value": 2.5
      }
    },
    "title": {
      "text": "Employment Data for Australian Skill Levels Over Time",
      "fontSize": 20,
      "font": "Arial",
      "anchor": "start",
      "color": "black"
    },
    "config": {},
    "background": "#F5F5F5"
  }  