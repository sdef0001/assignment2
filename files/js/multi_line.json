{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 650,
    "height": 400,
    "description": "A multiple line chart showing the employment data for Australian skill levels over time.",
    "params": [
      {
        "name": "highlight",
        "value": "Bachelor Degree or Higher",
        "bind": {
          "input": "select",
          "options": [
            "Bachelor Degree or Higher",
            "Advanced Diploma",
            "Certificate IV",
            "Certificate II",
            "Secondary Education"
          ],
          "labels": [
            "Bachelor Degree or Higher",
            "Advanced Diploma",
            "Certificate IV",
            "Certificate II",
            "Secondary Education"
          ],
          "name": "Select Skill Level to Highlight: "
        }
      }
    ],
    "data": {
      "url": "https://raw.githubusercontent.com/sdef0001/assignment1/refs/heads/main/skill_level.csv",
      "format": {
        "type": "csv"
      }
    },
    "mark": {
      "type": "line",
      "strokeWidth": 3
    },
    "encoding": {
      "x": {
        "field": "month",
        "type": "temporal", 
        "axis": {
          "title": "Month",
          "format": "%b %Y" 
        }
      },
      "y": {
        "field": "value",
        "type": "quantitative",
        "axis": {
          "title": "Value"
        }
      },
      "color": {
        "field": "title",
        "type": "nominal",
        "title": "Skill Level",
        "scale": {
          "scheme": "magma"
        }
      },
      "tooltip": [
        {
          "field": "title",
          "type": "nominal",
          "title": "Skill Level"
        },
        {
          "field": "month",
          "type": "temporal",
          "title": "Month",
          "format": "%b %Y"
        },
        {
          "field": "value",
          "type": "quantitative",
          "title": "Employment Value",
          "format": ",.0f"
        }
      ],
      "opacity": {
        "condition": {
          "test": "datum.title == highlight",
          "value": 1
        },
        "value": 0.3
      },
      "size": {
        "condition": {
          "test": "datum.title == highlight",
          "value": 4
        },
        "value": 2.5
      }
    },
    "config": {
      "axis": {
        "grid": true,
        "labelFontSize": 12,
        "titleFontSize": 14
      },
      "legend": {
        "titleFontSize": 13
      }
    },
    "background": "#F5F5F5"
  }  