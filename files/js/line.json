{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Multi-series line chart for unemployment rate by country from 1991 to 2023.",
    "title": {
      "text": "Unemployment Rate by Country (1991-2023)",
      "anchor": "middle",
      "fontSize": 18
    },
    "data": {
      "url": "https://raw.githubusercontent.com/sdef0001/assignment1/refs/heads/main/line_chart.csv",
      "format": {"type": "csv"}
    },
    "width": 700,
    "height": 450,
    "transform": [
      {
        "fold": [
          "1991",
          "1992",
          "1993",
          "1994",
          "1995",
          "1996",
          "1997",
          "1998",
          "1999",
          "2000",
          "2001",
          "2002",
          "2003",
          "2004",
          "2005",
          "2006",
          "2007",
          "2008",
          "2009",
          "2010",
          "2011",
          "2012",
          "2013",
          "2014",
          "2015",
          "2016",
          "2017",
          "2018",
          "2019",
          "2020",
          "2021",
          "2022",
          "2023"
        ],
        "as": ["year", "unemployment_rate"]
      },
      {
        "filter": "datum['Indicator Name'] === 'Unemployment, total (% of total labor force) (modeled ILO estimate)'"
      },
      {"calculate": "parseInt(datum.year)", "as": "year"}
    ],
    "layer": [
      {
        "mark": {"type": "line", "strokeWidth": 3},
        "encoding": {
          "x": {
            "field": "year",
            "type": "ordinal",
            "title": "Year",
            "axis": {
              "labelAngle": 0,
              "tickCount": 5,
              "values": [1991, 1995, 2000, 2005, 2010, 2015, 2020, 2023]
            }
          },
          "y": {
            "field": "unemployment_rate",
            "type": "quantitative",
            "title": "Unemployment Rate (%)",
            "axis": {"labelAngle": 0}
          },
          "color": {
            "field": "Country Name",
            "type": "nominal",
            "legend": {"title": "Country"},
            "scale": {"scheme": "category10"}
          },
          "opacity": {
            "condition": {
              "test": "datum['Country Name'] === 'Australia'",
              "value": 1
            },
            "value": 0.2
          },
          "tooltip": [
            {"field": "Country Name", "type": "nominal", "title": "Country"},
            {"field": "year", "type": "ordinal", "title": "Year"},
            {
              "field": "unemployment_rate",
              "type": "quantitative",
              "title": "Unemployment Rate (%)"
            }
          ]
        }
      },
      {
        "mark": {"type": "point", "filled": true, "size": 50},
        "encoding": {
          "x": {"field": "year", "type": "ordinal", "title": "Year"},
          "y": {
            "field": "unemployment_rate",
            "type": "quantitative",
            "title": "Unemployment Rate (%)"
          },
          "color": {"field": "Country Name"},
          "opacity": {
            "condition": {
              "test": "datum['Country Name'] === 'Australia'",
              "value": 1
            },
            "value": 0.2
          },
          "tooltip": [
            {"field": "Country Name", "type": "nominal", "title": "Country"},
            {"field": "year", "type": "ordinal", "title": "Year"},
            {
              "field": "unemployment_rate",
              "type": "quantitative",
              "title": "Unemployment Rate (%)"
            }
          ]
        }
      }
    ],
    "config": {"view": {"stroke": null}},
    "background": "#F5F5F5"
  }