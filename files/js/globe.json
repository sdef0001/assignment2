{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 700,
    "height": 400,
    "title": {
        "text": "Global Unemployment Rates in 2023",
        "fontSize": 20,
        "font": "Arial",
        "anchor": "start",
        "color": "black"
    },
    "projection": {
        "type": "equalEarth"
    },
    "layer": [
        {
            "data": {
                "sphere": true
            },
            "mark": {
                "type": "geoshape",
                "fill": "#97CCE8"
            }
        },
        {
            "data": {
                "graticule": {
                    "step": [
                        30,
                        30
                    ]
                }
            },
            "mark": {
                "type": "geoshape",
                "stroke": "#FFFFFF",
                "strokeWidth": 0.5
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/sdef0001/homework9/refs/heads/main/files/js/countries-110m.json",
                "format": {
                    "type": "topojson",
                    "feature": "countries"
                }
            },
            "transform": [
                {
                    "lookup": "id",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/sdef0001/homework9/refs/heads/main/files/data/unemployment_data_with_iso.csv",
                            "format": {
                                "type": "csv"
                            }
                        },
                        "key": "ISO_Code",
                        "fields": [
                            "Unemployment_Rate",
                            "Country_Name"
                        ]
                    }
                }
            ],
            "mark": {
                "type": "geoshape",
                "stroke": "#d3d3d3"
            },
            "encoding": {
                "color": {
                    "field": "Unemployment_Rate",
                    "type": "quantitative",
                    "title": "Unemployment Rate (%)",
                    "scale": {
                        "scheme": "magma"
                    }
                },
                "tooltip": [
                    {
                        "field": "Country_Name",
                        "title": "Country Name",
                        "type": "nominal"
                    },
                    {
                        "field": "Unemployment_Rate",
                        "title": "Unemployment Rate (%)",
                        "type": "quantitative"
                    }
                ]
            }
        }
    ],
    "config": {},
    "background": "#F5F5F5"
}